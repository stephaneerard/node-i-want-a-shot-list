{
  "compilerOptions": {
    "declaration": true,
    "diagnostics": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "LF",
    "preserveConstEnums": true,
    "pretty": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "sourceRoot": "src",
    "stripInternal": true,
    "target": "ES2020",
    "typeRoots": [
      "./node_modules/@types",
      "./src/"
    ],
    "watch": false,
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "test/**/*.specs.*.ts"
  ]
}
